{{#if inPost}}
  {{post.title}}<br>
  {{post.content}}<br>
  {{post.dateCreated}}
  {{post-edit post=post editPost="editPost" deletePost="deletePost"}}
  {{#each post.comments as |comment|}}
    {{comment-tile comment=comment deleteComment="deleteComment"}}
  {{/each}}
  {{comment-new post=post newComment="newComment"}}
{{else}}
  {{#link-to 'post' post.id}}{{post.title}}{{/link-to}}
{{/if}}
